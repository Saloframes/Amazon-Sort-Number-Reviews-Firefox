{
	"manifest_version": 2,

	"name": "Amazon™ Sort - Number of Reviews",
	"description": "Sort results on Amazon™ by number of reviews!",
	"icons": { "128": "icon128.png" },
	"version": "1.1",
	"applications": {
		"gecko": {
			"id": "amazonsort@mozilla"
  }
 },
	"content_scripts": [{
		"matches": ["*://www.amazon.com/*",
			"*://smile.amazon.com/*",
			"*://www.amazon.co.uk/*",
			"*://www.amazon.ca/*",
			"*://www.amazon.de/*",
			"*://www.amazon.it/*",
			"*://www.amazon.es/*",
			"*://www.amazon.fr/*",
			"*://www.amazon.com.br/*",
			"*://www.amazon.in/*"],
		"js": ["amazon.js"],
		"run_at": "document_start"
	}]
}